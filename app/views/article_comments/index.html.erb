<h1>Listing article_comments</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>Customer</th>
      <th>Active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @article_comments.each do |article_comment| %>
      <tr>
        <td><%= article_comment.article_id %></td>
        <td><%= article_comment.customer_id %></td>
        <td><%= article_comment.active %></td>
        <td><%= link_to 'Show', article_comment %></td>
        <td><%= link_to 'Edit', edit_article_comment_path(article_comment) %></td>
        <td><%= link_to 'Destroy', article_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

