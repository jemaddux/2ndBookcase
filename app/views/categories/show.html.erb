<p id="notice"><%= notice %></p>

<p>
  <strong><%= @category.name %></strong>
</p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Book Name</th>
      <th>Author</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Times rated</th>
    </tr>
  </thead>

  <tbody>
    <% for book in @books %>
      <tr>
        <td><%= image_tag("hobbit.jpg", class: "book_cover") %></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= '%.1f' % book.rating %></td>
        <td><%= book.times_rated %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @books %>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
